{
  "hosting": {
    "headers": [ {
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200000"
      } ]
    }, {
      "source": "**/*.@(jpg|jpeg|gif|png|webp)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200000"
      } ]
    }, {
      "source": "**/*.@(css|js)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=7200000"
      } ]
    }, {
      // Sets the cache header for 404 pages to cache for 5 minutes
      "source": "**/*.@(html|ico)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=30"
      } ]
    } ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
